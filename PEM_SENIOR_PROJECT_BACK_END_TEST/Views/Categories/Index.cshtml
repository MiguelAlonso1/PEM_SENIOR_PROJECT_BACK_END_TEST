@model IEnumerable<MainCategory>
<!-- The MainCategory aboved is wrapped in an IEnumerable so it can get extension methods
        like the .Count() below. This is needed so the foreach loops work since they need IEnumerable
        variables to iterate throgh them
        ServVM.Service.ImageUrl = @"\images\services\" + fileName + extension;

