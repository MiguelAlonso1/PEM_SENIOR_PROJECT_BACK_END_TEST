@model PEM_SENIOR_PROJECT_BACK_END_TEST.Models.ViewModels.LoginViewModel

<h2>Sign In</h2>

<div class="row">
    <div class="">
        <section id="loginform">
            <form id="account" method="post" asp-action="Login" asp-controller="Account">
                <h4>Use your registered email id and password to login.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-md-2 m-3" asp-for="Email"></label>
                    <div class="col-md-6">
                        <input class="form-control m-3" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 m-3" asp-for="Password"></label>
                    <div class="col-md-6">
                        <input class="form-control m-3" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <div class="col-6">
                        <input type="submit" value="Login" class="btn btn-success w-25" />
                    </div>
                </div>
                <div class="col-3 p-1 checkbox">
                    <label asp-for="RememberMe" class="">
                        <input asp-for="RememberMe" />
                    </label>
                    Remember me?
                </div>
                <p class="col-6">
                    <a class="btn btn-info w-25 mt-3" asp-action="Register" asp-controller="Account">
                        Sign Up
                    </a>
                </p>
            </form>
         
        </section>  
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}